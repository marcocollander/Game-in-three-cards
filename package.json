  "main": "src/js/app.js",
  "scripts": {
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp src/sass src/js src/images",
    "init:files": "touch README.md index.html src/sass/main.scss src/js/app.js .gitignore",
    "build:sass": "sass src/sass:~/../css",
    "watch": "npm-run-all build:* -p watch:*",
    "watch:browsersync": "browser-sync start --server --files \"css/*.css\" \"*.html\"",
    "watch:sass": "onchange src/sass/*.scss -- npm run build:sass"
  },
